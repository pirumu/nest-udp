{
  "git": {
    "commitMessage": "chore(): release v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "access": "public",
    "skipChecks": true
  },
  "hooks": {
    "before:init": ["pnpm run lint", "pnpm run test:e2e"],
    "after:bump": "pnpm run build"
  },
  "prompt": {
    "ghRelease": false,
    "glRelease": false,
    "publish": false
  }
}
